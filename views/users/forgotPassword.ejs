<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<title>WDShare 密码找回</title>
<% include ../etc/htmlhead.ejs %>
</head>

<body>
<% include ../etc/head.ejs %>

<% if ( typeof error !== "undefined" ) { %>
<script>
  error = '<%=error%>';
</script>
<% } %>

<div id="js-passport" style="display:none;"></div>
<div class="login-main">
  <div class="login-main-bg">
    <div class="login-inner">
      <div class="login-title">
        <h1>密码找回</h1>
        <h3 class="login-subhead forgotPassword-subhead">输入您的注册邮箱</h3>
        <h3 class="login-error forgotPassword-error"></h3>
      </div>
      <form id="js-forgotPasswordForm" name="forgotPasswordForm" method="post" action="">
        <p class="login-input login-username"><input type="text" name="email" placeholder="输入您的邮箱" /></p>
        <% if ( captcha && captcha === true ) { %>
        <p class="login-input login-code"><input type="text" name="code" placeholder="验证码" /> <img id="code" src="/captcha/get" onclick="document.getElementById('code').src +='?'+new Date().getTime(); return false;" title="点击刷新验证码" /></p>
        <% } %>
        <div class="login-but">
          <input type="submit" name="submitbutton" value="提交" />
        </div>
        <p class="link"><a href="/user/login">返回登录</a></p>
      </form>
    </div>
  </div>
</div>

<% include ../etc/foot.ejs %>
</body>
</html>