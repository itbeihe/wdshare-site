<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<title>WDShare用户注册</title>
<% include ../etc/htmlhead.ejs %>
</head>

<body>
<% include ../etc/head.ejs %>

<div id="js-passport" style="display:none;"></div>
<div class="login-main">
  <div class="login-main-bg">
    <div class="login-inner">
      <div class="login-title">
        <h1>注册帐号</h1>
        <h3 class="login-subhead reg-subhead">输入信息注册新帐户</h3>
        <h3 class="login-error reg-error"></h3>
      </div>
      <form id="js-regForm" name="regForm" method="post" action="">
        <p class="login-input login-username"><input type="text" name="email" placeholder="输入常用邮箱" /></p>
        <p class="login-input login-password"><input type="password" name="password" placeholder="输入您的密码" /></p>
        <p class="login-input login-password"><input type="password" name="repassword" placeholder="再次输入密码" /></p>
        <% if ( captcha && captcha === true ) { %>
        <p class="login-input login-code"><input type="text" name="code" placeholder="验证码" /> <img id="code" src="/captcha/get" onclick="document.getElementById('code').src +='?'+new Date().getTime(); return false;" title="点击刷新验证码" /></p>
        <% } %>
        <div class="login-but">
          <input type="submit" name="submitbutton" value="注册" />
        </div>
        <p class="link"><a href="/user/login" onclick="if ( window.location.href.indexOf('referer') < 0 ) { window.location='/user/login?referer='+window.location.href; } else {window.location='/user/login?'+window.location.href.substring(window.location.href.indexOf('referer'));} return false;">已有账户，现在登录</a></p>
      </form>
    </div>
  </div>
</div>

<% include ../etc/foot.ejs %>
</body>
</html>