<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<title>WDShare管理中心-添加捐赠</title>
<meta name="auther" content="F7" />
<% include ../etc/htmlhead.ejs %>
</head>

<body>
<% include ../etc/head.ejs %>
<div class="manage">
  <% include ../etc/left.ejs %>
  <div class="manage-right">
    <h1 class="manage-title">捐赠</h1>
    <div class="manage-module">
      <form id="js-donation-create-form">
        <!-- <input type="hidden" name="id" value="" /> -->
        <div class="manage-module-head">
          <h3 class="manage-module-title">添加捐赠</h3>
          <div class="manage-tool">
            <input class="green" name="submitbutton_head" type="submit" value="提交"/>
            <input class="gray" type="reset" value="重置"/>
          </div>
        </div>
        <div class="manage-module-con">
          <div class="manage-addActive-form">
            <div class="manage-addActive-form-item">
              <label>
                <strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>捐赠分类：</strong>
                <select name="channel">
                  <option value="" selected>请选择分类</option>
                  <option value="1">高级群</option>
                  <option value="2">中级群</option>
                  <option value="3">初级群</option>
                  <option value="4">活动</option>
                  <option value="5">其他</option>
                  <option value="-1">消费</option>
                </select>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>姓名：</strong>
                <input type="text" name="name" /><span>请输入qq群昵称</span>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong>qq号码：</strong>
                <input type="text" name="qq" />
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong>来源：</strong>
                <select name="source">
                  <option value="微信" selected>微信</option>
                  <option value="支付宝">支付宝</option>
                </select>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong>来源昵称：</strong>
                <input type="text" name="sourceNickname" />
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>金额：</strong>
                <input type="text" name="gold" /><span>元</span>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>捐赠时间：</strong>
                <input type="text" class="js-calendar" name="addDate" data-date-format="yyyy-mm-dd" /><span>2016-01-01</span>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label>
                <strong>注释：</strong>
                <textarea name="comment"></textarea>
              </label>
            </div>
            
            <div class="manage-addActive-form-item manage-form-but">
              <input class="green" name="submitbutton" type="submit" value="提交"/>
              <input class="gray" type="reset" value="重置"/>
            </div>
          </div>
        </div>
      </form>
    </div>
    
  </div>
</div>

<% include ../etc/foot.ejs %>
</body>
</html>