<!doctype html>
<html>
<head>
<meta charset="utf-8" />
<title>WDShare管理中心-修改招聘分类</title>
<meta name="auther" content="F7" />
<% include ../etc/htmlhead.ejs %>
</head>

<body>
<% include ../etc/head.ejs %>
<div class="manage">
  <% include ../etc/left.ejs %>
  <div class="manage-right">
    <h1 class="manage-title">招聘分类</h1>
    <div class="manage-module">
      <form id="js-jobChannels-create-form">
        <input type="hidden" name="aid" value="<%=result._id%>" />
        <div class="manage-module-head">
          <h3 class="manage-module-title">修改招聘分类</h3>
          <div class="manage-tool">
            <input class="green" name="submitbutton_head" type="submit" value="提交"/>
            <input class="gray" type="reset" value="重置"/>
          </div>
        </div>
        <div class="manage-module-con">
          <div class="manage-addActive-form">
            <div class="manage-addActive-form-item">
              <label>
                <strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>分类归属：</strong>
                <select name="parent">
                  <option value="1"<%if (result.parent == 1) {%> selected<%}%>>招聘分类</option>
                  <option value="2"<%if (result.parent == 2) {%> selected<%}%>>企业领域</option>
                  <option value="3"<%if (result.parent == 3) {%> selected<%}%>>企业规模</option>
                  <option value="4"<%if (result.parent == 4) {%> selected<%}%>>公司发展阶段</option>
                  <option value="5"<%if (result.parent == 5) {%> selected<%}%>>工作年限</option>
                  <option value="6"<%if (result.parent == 6) {%> selected<%}%>>学历</option>
                  <option value="7"<%if (result.parent == 7) {%> selected<%}%>>招聘类型</option>
                  <option value="8"<%if (result.parent == 8) {%> selected<%}%>>工作城市</option>
                </select>
              </label>
            </div>
            <div class="manage-addActive-form-item">
              <label><strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>分类名称：</strong><input type="text" name="name" value="<%=result.name%>" /></label>
            </div>
            <div class="manage-addActive-form-item">
              <label><strong><em style="font-size:26px; color:#f00; vertical-align:middle; padding-right:5px;">*</em>排序：</strong><input type="text" name="order" value="<%=result.order%>" /><span>仅限数字，数字越大越靠前</span></label>
            </div>
            <div class="manage-addActive-form-item">
              <label><strong>描述：</strong>
              <textarea name="description" cols="30" rows="10"><%=result.description%></textarea></label>
            </div>
            
            <div class="manage-addActive-form-item manage-form-but">
              <input class="green" name="submitbutton" type="submit" value="提交"/>
              <input class="gray" type="reset" value="重置"/>
            </div>
          </div>
        </div>
      </form>
    </div>
    
  </div>
</div>

<% include ../etc/foot.ejs %>
</body>
</html>